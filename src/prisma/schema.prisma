// Configure the database connection
generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

// Set the PostgreSQL database connection URL
datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}


model Label {
  id       String @id @default(cuid()) // Assuming that "id" is autogenerated in the database
  label    String @unique
  meals    MealLabel[]
}

model Meal {
  id       String @id @default(cuid()) // Assuming that "id" is autogenerated in the database
  title    String @unique
  starter  String?
  desert   String?
  price    Float
  img      String
  labels   MealLabel[]
  drinks   DrinkMeal[]
}

model Drink {
  id       String @id @default(cuid()) // Assuming that "id" is autogenerated in the database
  title    String @unique
  price    Float
  meals    DrinkMeal[]
}

model MealLabel {
  labelId String
  label   Label @relation(fields: [labelId], references: [id])
   
  mealId  String
  meal    Meal  @relation(fields: [mealId], references: [id])

  @@id([labelId, mealId])
}

model DrinkMeal {
  drinkId String
  drink   Drink @relation(fields: [drinkId], references: [id])
  
  mealId  String
  meal    Meal  @relation(fields: [mealId], references: [id])

  @@id([drinkId, mealId])
}